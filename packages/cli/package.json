{
  "name": "chargebee-init",
  "bin": {
    "chargebee-init": "bin/init"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "bin"
  ],
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "enquirer": "^2.4.1",
    "simple-git": "^3.27.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@pnpm/types": "^1000.6.0",
    "@types/semver": "^7.7.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist && mkdir -p dist/templates",
    "build": "tsc",
    "postbuild": "for n in nextjs; do cp -R ../$n/templates dist/templates/$n/; done;",
    "watch": "pnpm build && tsc --watch",
    "//build": "esbuild ./src/* ./bin/* --outdir=./dist --platform=node --target=node18 --format=cjs --loader:.template.ts=text"
  }
}
