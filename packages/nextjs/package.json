{
  "name": "@chargebee/nextjs",
  "version": "1.0.0",
  "author": {
    "name": "Chargebee",
    "email": "dx@chargebee.com"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./src/core.ts",
      "default": "./dist/core.js"
    }
  },
  "imports": {
    "#core": "./dist/core/index.js"
  },
  "files": ["dist"],
  "dependencies": {
    "chargebee": "^3.10.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "next": "^15.3.3"
  },
  "peerDependencies": {
    "next": ">=15"
  },
  "scripts": {
    "build": "tsc --build",
    "postbuild": "cp -R ../core/dist ./dist/core",
    "prewatch": "pnpm build",
    "watch": "tsc --build --watch"
  }
}
